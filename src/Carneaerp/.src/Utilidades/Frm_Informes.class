Public Sub Form_Close()

  'Kill FMain.CarpetaListados & "/*.html" 
  Dim nombrearchivo As String
  For Each nombrearchivo In Dir(FMain.CarpetaListados, "*.*", GB.File).Sort()
    Kill FMain.CarpetaListados & "/" & nombrearchivo
   Next
  
End

