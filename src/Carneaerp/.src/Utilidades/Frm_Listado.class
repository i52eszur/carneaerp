  While Linea_Detalles.Available
    aux = Linea_Detalles["materiaprima"]
    Linea_MateriaPrima = Utilidades.Obtener_Campo_Tabla("select nombre from materiaprima where codigomateriaprima='" & aux & "'", "nombre")
